<article id="<%= item.layout %>-<%= item.slug %>" class="h-entry <%= item.layout %>" itemprop="blogPost" itemscope itemtype="https://schema.org/BlogPosting">
  <div class="post-content">
    <header>
      <% if (item.layout !='page' ){ %>
        <time class="dt-published" datetime="<%= item.date.toDate().toISOString() %>">
          <a href="<%- url_for(item.path) %>"><%= item.date.format(config.date_format) %></a>
        </time>
      <% } %>
      <%- partial('post/title') %>
    </header>
    <div class="e-content entry" itemprop="articleBody">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>
      <% if (index){ %>
        <% if (item.excerpt){ %>
          <div class="alignleft">
            <a href="<%- url_for(item.path) %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
      <% } else { %>
        <%- partial('post/tag') %>
      <% } %>
     <div class="clearfix"></div>
    </footer>
  </div>
</article>
