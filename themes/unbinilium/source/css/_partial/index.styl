#pagination
  a
    color var(--color-font)
    font-weight bold
    font-family font-title
    margin-bottom 30px
    &:hover
      text-decoration underline
  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon
  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon
