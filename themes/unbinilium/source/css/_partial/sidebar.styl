#sidebar
  width 270px
  line-height 1.8em
  position -webkit-sticky
  position sticky
  top 30px
  @media screen and (max-width: 900px)
    position unset
    float none
    width 100%
  .widget::-webkit-scrollbar
    display none
  .widget
    border 1px solid var(--color-basic)
    margin-bottom 30px
    word-wrap break-word
    max-height var(--sidebar-wrapper-height)
    overflow-y auto
    -ms-overflow-style none
    .title
      padding 15px 20px
      font-size 1em
      border-bottom 1px solid var(--color-basic)
      font-weight bold
    .entry
      font-size 0.9em
      padding 15px 20px
      display flex
      flex-direction column
    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .tag
    small
      &:before
        content '['
      &:after
        content ']'
